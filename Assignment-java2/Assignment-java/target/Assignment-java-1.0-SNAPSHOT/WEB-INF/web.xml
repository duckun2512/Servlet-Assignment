<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/product/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/product/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowDetailProductServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.ShowDetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowDetailProductServlet</servlet-name>
        <url-pattern>/admin/product/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/admin/product/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/product/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/category/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentjava.controller.EditCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/admin/category/edit</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>